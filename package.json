{
  "name": "c2c-agents-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "C2C Web3 任务接单平台 - Monorepo",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome check .",
    "check": "biome check --write .",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "contracts:compile": "pnpm --filter @c2c-agents/contracts compile",
    "contracts:deploy": "pnpm --filter @c2c-agents/contracts deploy",
    "db:migrate": "cd infra/supabase && supabase migration up",
    "db:reset": "cd infra/supabase && supabase db reset",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@turbo/gen": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "turbo": "^2.3.0",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@10.23.0"
}
