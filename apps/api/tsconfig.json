{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2021",
    "lib": ["ES2021"],
    "outDir": "./dist",
    "rootDir": "../..",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@c2c-agents/shared": ["../../packages/shared/src"],
      "@c2c-agents/shared/*": ["../../packages/shared/src/*"],
      "@c2c-agents/config": ["../../packages/config/src"],
      "@c2c-agents/config/*": ["../../packages/config/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
